/* pages/goods_details/goods_details.wxss */
.details-header .content {
  position: relative;
  padding: 40rpx 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.details-header .content .title>text:first-of-type {
  display: -webkit-box;
  margin: 0 70rpx 26rpx 0;
  padding-right: 10rpx;
  border-right: 1rpx solid #d9d9d9;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
}

.details-header .content .shore {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}

.details-header .content .shore .shore-img {
  text-align: center;
}

.details-header .content .shore .shore-img>image {
  width: 40rpx;
  height: 40rpx;
}

.details-header .content .price {
  margin: 36rpx 0;
}
.details-header .content .price-original{
  text-decoration: line-through;
  margin-left: 20rpx;
  padding: 0 16rpx;
  display: inline-block;
  position: relative;
}
.price-original:before{
  content: '(';
  position: absolute;
  top: 0;
  left: 0;
}
.price-original:after{
  content: ')';
  position: absolute;
  top: 0;
  right: 0;
}

.details-header .goods-type {
  background-color: #fff;
  padding: 10rpx 30rpx 30rpx;
}

.details-header .goods-type .goods-type-li {
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  margin-top: 20rpx;
  padding: 20rpx 0;
  text-align: center;
}

.details-header .goods-type .goods-type-li.on {
  border-color: #e7214f;
  position: relative;
}
.details-header .goods-type .goods-type-li.on>image{
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  right: 2rpx;
  bottom: 4rpx;
  z-index: 9;
}

.details-header .goods-type .goods-type-li.on:after {
  content: '';
  position: absolute;
  right: 0;
  bottom: 0;
  width: 0;
  height: 0;
  border-bottom: 40rpx solid #e7214f;
  border-left: 40rpx solid transparent;
}

.details-header .choose {
  background-color: #fff;
  padding: 30rpx;
  margin: 20rpx 0;
  position: relative;
  display: flex;
  align-items: center;
}

.details-header .choose>text:nth-of-type(2) {
  margin: 0 30rpx; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 500rpx;
}

.details-header .choose>image {
  width: 40rpx;
  height: 10rpx;
  position: absolute;
  top: 50%;
  right: 30rpx;
  margin-top: -2rpx;
}

.recommend {
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.recommend-goods-li {
  display: inline-block;
  width: 32%;
  border: 1rpx solid #d9d9d9;
  box-sizing: border-box;
  margin-top: 30rpx;
}

.recommend-goods-li>image {
  width: 100%;
  height: 180rpx;
}

.recommend-goods-li:nth-of-type(2) {
  margin: 0 2%;
}

.recommend-goods-li>text:first-of-type {
  display: -webkit-box;
  margin: 20rpx;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.recommend-goods-li>text:last-of-type {
  margin: 0 0 20rpx 20rpx;
}

/* details-body */

.details-body {
  background-color: #fff;
  margin-bottom: 120rpx;
}

.details-body .nav {
  border-bottom: 1rpx solid #d9d9d9;
}

.details-body .nav-li {
  display: inline-block;
  width: 50%;
  text-align: center;
  padding-bottom: 30rpx;
}

.details-body .nav-li>text {
  display: inline-block;
  padding: 30rpx 40rpx;
  border-bottom: 4rpx solid #fff;
}

.details-body .nav-li>text.on {
  border-color: #e7214f;
}

.details-body .nav-li-details>image {
  width: 100%;
  overflow: hidden;
  display: inline-block;
  vertical-align: top;
}

.details-body .evaluate-li {
  border-bottom: 1rpx solid #d9d9d9;
  padding: 30rpx;
}

.details-body .evaluate-li>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  float: left;
}

.evaluate-content {
  position: relative;
  padding-left: 120rpx;
}

.evaluate-score {
  margin: 20rpx 0;
}

.evaluate-score .goods-score {
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
  margin-right: 10rpx;
}

.evaluate-score .goods-score.on {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}

.evaluate-time {
  position: absolute;
  top: 0;
  right: 0;
}

.evaluate-upper>image {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx 20rpx 0 0;
}

/* details-footer */

.details-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  display: flex;
  height: 100rpx;
}

.details-footer image {
  width: 50rpx;
  height: 50rpx;
}

.details-footer .collect, .details-footer .car {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  border-top: 1rpx solid #d9d9d9;
}

.details-footer .collect {
  border-right: 1rpx solid #d9d9d9;
}

.details-footer .buy {
  flex: 2;
  text-align: center;
  height: 100%;
  line-height: 100rpx;
}
