/* pages/evaluate/evaluate.wxss */

.goods-evaluate-list {
  margin-top: 20rpx;
  background-color: #fff;
}

.evaluate-header, .evaluate-content {
  padding: 20rpx 30rpx;
}

.evaluate-header>image {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  float: left;
}

.evaluate-content .evaluate {
  width: 100%;
  height: 110rpx;
}
.img-up{
  display: flex;
  flex-direction: row;
}
.img-up .upper-img>image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  border: 1rpx solid #d9d9d9;
}
.img-up .btn-imgUp {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #d9d9d9;
}

.btn-imgUp>image {
  width: 50rpx;
  height: 50rpx;
}

.evaluate-footer {
  padding: 30rpx;
  border-top: 1rpx solid #d9d9d9;
}

.evaluate-footer .goods-score {
  float: right;
  width: 40rpx;
  height: 40rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
  margin-left: 20rpx;
}

.evaluate-footer .goods-score.on {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}

.other-score {
  margin-top: 20rpx;
  background-color: #fff;
}

.other-score .evaluate-footer {
  border: 0;
}

.evaluate-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #fff;
  text-align: right;
}

.evaluate-bar .btn-evaluate {
  display: inline-block;
  line-height: 94rpx;
  background-color: #e72142;
  padding: 0 30rpx;
}
