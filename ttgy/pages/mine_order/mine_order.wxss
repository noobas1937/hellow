.swiper-tab .on{
  border-bottom: 5rpx solid #e72142;
}
.order-list{
  padding-top: 130rpx;
}
.order-li{
  margin-bottom: 30rpx;
}
.order-li .header{
  background-color: #ffffff;
  padding: 20rpx 30rpx;
}
.order-li .header>text:first-of-type{
  display: inline-block;
  width: 400rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
.order-li .header>text:last-child{
  float: right;
}
.order-li .content .goods-li{
  background-color: #f5f5f5;
  border: 0;
}
.order-li .content .goods-img-box{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  padding: 30rpx;
}
.goods-img-box>image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 30rpx;
}
.order-li .content .order-li-count{
  background-color: #ffffff;
  text-align: right;
  line-height: 70rpx;
  padding: 0 30rpx;
}
.order-li-count>text:nth-of-type(2){
  margin: 0 30rpx;
}

.order-li .footer{
  background-color: #ffffff;
  text-align: right;
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #d9d9d9;
}
.order-li .footer>button{
  display: inline;
  background-color: #ffffff;
  margin-left: 30rpx;
  padding: 10rpx 40rpx;
  line-height: 60rpx;
}
 .order-li .footer>button.btn-cancel:after{
  border: 0;
} 
.order-li .footer>button.btn-pay{
  color: #ffffff;
  background-color: #e72142;
  border-radius: 8rpx;
}
