/* pages/mine_order/mine_order.wxss */
.container{
  position: relative;
}
.swiper-tab{
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  margin-bottom: 30rpx;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
}
.swiper-tab .tab-item{
  width: 20%;
   padding: 30rpx 0; 
  text-align: center;
}
