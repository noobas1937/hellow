/**index.wxss**/
.top-bar{
  width: 100%;
  height: 86rpx;
  display: flex;
  align-items: center;
  background-color: #ffffff;
}
.top-bar-address{
  float: left;
  background-color: #ee3541;
  display: flex;
  align-items: center;
  padding: 0 40rpx 0 20rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.top-bar-address>image{
  width: 30rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.top-bar-search{
  width: 70%;
  height: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-radius: 50rpx;
  margin: 0 20rpx;
  text-align: center;
}
.top-bar-search>image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/* customer-tips */
.customer-tips{
  padding: 30rpx 0;
  border-bottom: 1px solid #cccccc;
  background-color: #ffffff;
}
.customer-tips-li{
  display: inline-block;
  width: 25%;
  text-align: center;
}
.customer-tips-li>image{
  width: 100rpx;
  height: 100rpx;
}
.customer-tips-li>text{
  display: block;
}

/* ad */
.ad{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  position: relative;
}
.ad>swiper{
  position: absolute;
  top: 0;
  left: 180rpx;
  right: 20rpx;
  bottom: 0;
}
.ad-title{
  font-weight: 600;
  margin: 0 20rpx;
}

/* favourable */
.favourable-item{
  display: inline-block;
  width: 50%;
  background-color: #ffffff;
  padding-left: 20rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
}
.favourable-item>image{
  width: 100%;
}
