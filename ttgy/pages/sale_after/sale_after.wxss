/* pages/sale_after/sale_after.wxss */
@import "../evaluate/evaluate.wxss";
.sale-after>text{
  display: inline-block;
  margin:30rpx 30rpx 10rpx;
}
.sale-after>button{
  width: 70%;
  margin: 60rpx auto 0;
}
.icon{
  flex: 1;
}
.details{
  flex: 11;
  margin-right: 80rpx;
}
.icon image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 30rpx;
}
.order-message,.order-time{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 20rpx 0;
}
.order-message .icon image{
  width: 30rpx;
  margin: 0 25rpx;
}
.details_users{
  margin-bottom: 10rpx;
}
.details_users>text:nth-of-type(2){
  margin: 0 15rpx 0 20rpx;
  font-weight: 600;
}
.details_users>text:last-of-type{
  border-radius: 8rpx;
  padding: 0 10rpx;
}