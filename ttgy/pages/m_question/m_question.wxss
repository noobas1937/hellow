/* pages/m_question/m_question.wxss */
.question-header{
  height: 120rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.question-header>image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: absolute;
  top: 50%;
  margin-top: -50rpx;
  margin-left: 30rpx;
}
.question-header>text{
  display: block;
  margin-left: 160rpx;
}

.question-list{
  background-color: #ffffff;
}
.question-li{
  padding: 30rpx;
  border-top: 1rpx solid #d9d9d9;
}
.answer-list{
  padding: 0 30rpx 20rpx;
}
.answer-li>text:first-of-type{
  display: block;
  margin: 10rpx 0;
}

.question-footer{
  margin-top: 30rpx;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
}
.prompt-li{
  margin: 20rpx 0;
}