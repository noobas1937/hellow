.order-state-time{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  position: absolute;
  top:-100rpx;
  left: 50%;
  margin-left: -100rpx;
  background-color: #ffffff;
}
.order-state-details{
  padding: 10rpx 0 40rpx;
}
.order-state-details>text{
  padding-right: 60rpx; 
}
.order-state-details>button{
  width: 44%;
  background-color: #ffffff;
  line-height: 30rpx;
  padding: 20rpx;
  margin: 30rpx auto 0;
}
.order-state-loading>text{
  display: block;
  padding: 0;
}
.order-state-loading>button{
  width: auto;
  display: inline-block;
  background-color: #ffffff;
  line-height: 30rpx;
  padding: 20rpx 40rpx;
  margin: 30rpx 0;
}
