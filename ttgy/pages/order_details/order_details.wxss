.outer-circle{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: #e72142;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.shade-circle{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #999999;
  border-top-right-radius: 50%;
}
.inner-circle{
  width: 170rpx;
  height: 170rpx;
  border-radius: 50%;
  background-color: #ffffff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
}
.inner-circle>text:first-child{
  font-weight: 400;
}

/* order-state-refund */
.order-state-refund{
  padding: 30rpx;
  background-color: #ffffff;
}
.refund-time>text{
  font-weight: 300;
}
.refund-time>text:last-child{
  margin-left: 20rpx;
}
.refund-content{
  margin: 20rpx 0;
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-top: 1rpx solid #d9d9d9;
  font-weight: 300;
}
.refund-content text{
  margin: 0 20rpx 0 30rpx;
}
 .refund-card{
  height: 60rpx;
  line-height: 60rpx;
} 
.refund-card>text:last-of-type{
  float: right;
  line-height: 60rpx;
}

/* order-state-evaluate */
.order-state-evaluate{
  padding: 40rpx 0;
  background-color: #ffffff;
  text-align: center;
}
.order-state-evaluate>text:first-of-type{
  padding-right: 60rpx;
  font-weight: 400;
  margin-left: 50rpx;
}
.order-state-evaluate>text:last-of-type{
  display: block;
  margin: 20rpx 0;
}
.order-state-evaluate>button{
  display: inline-block;
  line-height: 30rpx;
  padding: 20rpx 60rpx;
}

/* goods-details */
.goods-details>text,.delivery-details>text,.order-details>text{
  display: block;
  padding: 30rpx;
  background-color: #f5f5f5;
}
.goods-details .goods-li{
  padding-left: 10rpx;
}

/* goods-count */
.goods-count{
  padding: 0 20rpx;
  background-color: #ffffff;
  margin-top: 20rpx;
}
.goods-count .total,.goods-count .carriage{
  padding: 20rpx 0;
}
.goods-count .total>text:last-of-type,.goods-count .carriage>text:last-of-type{
  float: right;
}
.out-of-pocket{
  border-top: 1px solid #d9d9d9;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  position: relative;
}
.out-of-pocket .call{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.out-of-pocket .call>image{
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx;
}
.out-of-pocket>text:last-of-type{
  position: absolute;
  right: 20rpx;
}

/* delivery-info */
.order-info{
  background-color: #ffffff;
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  font-weight: 300;
}
.order-info>text:first-child{
  flex: 3;
}
.order-info>text:last-child{
  flex: 9;
}


.order-tool-bar{
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 94rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.order-tool-bar .btn{
  float: right;
  margin-right: 30rpx;
}
