/* pages/order_details/order_details.wxss */
@import "../inventory/inventory.wxss";
.order-state{
  padding: 30rpx;
  text-align: center;
}
.logistical-list{
  padding: 30rpx 30rpx 0;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}
.logistical-li{
  display: flex;
  position: relative;
}
.logistical-li>image{
  width: 20rpx;
  height: 70rpx;
}
.logistical-li>text{
  margin: -4rpx 0 0 20rpx;
}
.logistical-li>text:last-of-type{
  position: absolute;
  right: 0;
  width: 160rpx;
  text-align: right;
}
.show-logistical{
  padding: 20rpx 30rpx;
  text-align: center;
}
.show-logistical>text{
  display: inline-block;
  padding: 0 60rpx;
}


.location-map{
  width: 100%;
  height: 486rpx;
}
.location-map>image{
  width: 100%;
}

