           <view class="ntf-4s">
             <text class="fs-1 cr-5">￥</text>
             <text class="fs-7 cr-5">6.9</text>
             <text class="fs-1 cr-6">/1斤</text>
           </view>
         </view>
       <image src="../../img/carts.png" mode="aspectFit" class="hot-cart" onTap="addCart"/>
       </view>
      </block>
     </view>



















 

