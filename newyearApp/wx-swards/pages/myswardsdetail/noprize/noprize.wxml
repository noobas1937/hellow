<view class="raise-container">

 <view class="fp-1 bg-1">
     <image class="fp-1-img" src="{{glswd.award[0].img_id}}"></image>
     <view class="fp-1-con">
       <text class="fp-1-con-1 bg-9 cr-1 fs-2">第{{glswd.draw.id}}期</text>
       <text class="fp-1-con-2 cr-2 fs-5">{{glswd.award[0].name}}</text>
     </view>
  </view>

   
  <view class="rsc-3">
     <text class="rsc-3a fs-1 cr-2">已筹集{{glswd.draw.credits*glswd.draw.with_people}}分 {{glswd.draw.end_date}}已开奖</text>
     <image src="/image/fail.png" mode="aspectFill" class="rsc-3b"/>
     <text class="rsc-3c fs-6 cr-2">很遗憾您未中奖</text>
     <text class="rsc-3d fs-1 cr-6">中奖者：{{glswd.lucker.lucky_name}}</text>
     <text class="rsc-3e fs-1 cr-6">中奖幸运号：{{glswd.lucker.lucky_number}}</text>
     <text class="rsc-3f fs-3 cr-1" bindtap='goHome'>继续抽奖</text>
  </view>
    

  

  <view  class="rsc-5" bindtap="goMyluckyNumber">
    <view class="bg-8 rsc-5a">
       <text class="cr-6 rsc-5a-1 fs-3 lef">您拥有幸运夺宝号<text class="cr-11">{{glswd.luckynumbers?glswd.luckynumbers:0}}</text></text>
       <text class="rsc-5a-31 fs-3 cr-11 rig" >查看</text>
    </view>
    
  </view>

 
  
 
    
</view>